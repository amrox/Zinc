{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"patternProperties": {
		".+": {
			"type": "object",
			"required": ["sha", "formats"],
			"additionalProperties": false,
			"properties": {
				"sha": {
					"type": "string",
					"pattern": "[0-9a-f]{40}"
				},
				"formats": {
					"type": "object",
					"additionalProperties": false,
					"patternProperties": {
						"^(gz|raw)$": {
							"type": "object",
							"properties": {
								"size": {
									"type": "integer",
									"minimum": 0
								}
							},
							"required": ["size"],
							"additionalProperties": false
						}
					}
				},
				"flavors": {
					"type": "array",
					"items": {
						"type": "string",
						"minLength": 1
					}
				}
			}
		}
	}
}